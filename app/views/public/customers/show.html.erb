<div class="container m-5">
    <h2>マイページ</h2>
    <h4><strong>登録情報</strong></h4><%= link_to '編集する', edit_public_customers_path, class:"btn btn-sm btn-success" %> <br>
    <table class="table table-bordered">
      <tbody>
        <tr><p>氏名</p><%= @customer.last_name %><%= @customer.first_name %></tr>
        <tr><p>カナ</p><%= @customer.last_name_kana %><%= @customer.first_name_kana %></tr>
        <tr><p>郵便番号</p><%= @customer.postal_code %></tr>
        <tr><p>住所</p><%= @customer.address %></tr>
        <tr><p>電話番号</p><%= @customer.telephone_number %></tr>
        <tr><p>メールアドレス</p><%= @customer.email %></tr>
      </tbody>
    </table>
  <%= link_to '注文一覧を見る', public_orders_path, class: "btn btn-sm btn-primary" %>
</div>
