<h1>会員情報編集</h1>
<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>

  <div class="field">
    <%= f.label :名前 %>
    （姓）<%= f.text_field :last_name %>
    （名）<%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<%= f.text_field :last_name_kana %>
    （メイ）<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
  </div>
   <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>




