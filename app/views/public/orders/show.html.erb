<h1>注文履歴詳細画面</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8">
  <h4>注文情報</h4>
  <table class="table">
    <tr>
      <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th><td>〒<%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th><td><%= @order.payment_i18n %></td>
    </tr>
      </table>
    </div>
  <div class="col-md-4">
  <h4>請求情報</h4>

    商品合計<%= (@order.price - @order.postage).to_s(:delimited) %><br>
    配送料<%= @order.postage %><br>
    ご請求額<%= @order.price.to_s(:delimited) %>
  </div>
    </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
  <h4>注文内容</h4>
    <table class="table">
      <thead>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price.to_s(:delimited) %></td>
          </tr>
        <% end %>
        </tbody>
    </table>
    </div>
    </div>
  </div>
