<h1>注文情報確認画面</h1>
<table class="table table-bordered border-dark">
  <thead class="table-secondary">
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
  </thead>
<% @cart_items.each do |cart_item| %>
  <tr>
     <th scope="row"><%= image_tag cart_item.item.get_image(80,80) %><%= cart_item.item.name %></th>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td><br>
  </tr>
<% end %>
</table>
<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>送料<%= @order.postage %></td><br>
      <td>商品合計<%= @total += cart_item.subtotal %></td><br>
      <td>請求金額
      <%= f.hidden_field :price, :value => @order.price %><br>
      </td>
    </tr>
  <% end %>
  <tr>
    <td>支払い方法
    <%= f.hidden_field :payment_method, :value => @order.payment %>
    <%= @order.payment %>
    </td><br>
    <td>お届け先</td>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    〒<%= @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= @order.address %>
    <%= f.hidden_field :full_name, :value => @order.name %>
    <%= @order.name %></tr><br>
    <%= f.submit '注文を確定する' %>

<% end %>