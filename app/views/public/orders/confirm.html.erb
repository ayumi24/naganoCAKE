<h1>注文情報確認画面</h1>
<% @cart_items.each do |cart_item| %>
  <tr>
     <th scope="row"><%= image_tag cart_item.item.get_image(80,80) %><%= cart_item.item.name %></th>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td><br>
  </tr>
<% end %>
  <tr>
    <td>送料<%= @order.postage %></td><br>
    <td>商品合計<%= @total %></td><br>
    <td>請求金額</td>
  </tr>



<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :full_name, :value => @order.name %>
<%= f.hidden_field :price, :value => @order.price %>
<%= f.hidden_field :payment_method, :value => @order.payment %>
<%= f.submit '注文を確定する' %>

<% end %>