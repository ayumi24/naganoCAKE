<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCAKE</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light p-4 border-bottom-black">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" ><strong>ながのCAKE</strong></a>
      <ul class="nav justify-content-end">
    <% if request.fullpath.include? "admin"  %>
     <% if admin_signed_in? %>
          <li>
            <%= link_to admin_items_path do %>
            <button class="btn btn-outline-dark mx-2">商品一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to admin_customers_path do %>
            <button class="btn btn-outline-dark mx-2">会員一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to admin_homes_top_path do %>
            <button class="btn btn-outline-dark mx-2">注文履歴一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to admin_genres_path do %>
            <button class="btn btn-outline-dark mx-2">ジャンル一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete do %>
            <button class="btn btn-outline-dark mx-2">ログアウト</button>
          </li>
            <% end %>
          <% else %>
          <li>
            <%= link_to public_homes_about_path do %>
            <button class="btn btn-outline-dark mx-2">About</button>
          </li>
            <% end %>
          <li>
            <%= link_to public_items_path do %>
            <button class="btn btn-outline-dark mx-2">商品一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to new_customer_registration_path do %>
            <button class="btn btn-outline-dark mx-2">新規登録</button>
          </li>
            <% end %>
          <li>
            <%= link_to new_customer_session_path do %>
            <button class="btn btn-outline-dark mx-2">ログイン</button>
          </li>
            <% end %>
          <% end %>
        <% else %>
       <% if customer_signed_in? %>
          <li>
            <%= link_to public_customers_path do %>
            <button class="btn btn-outline-dark mx-2">マイページ</button>
          </li>
            <% end %>
          <li>
            <%= link_to public_items_path do %>
            <button class="btn btn-outline-dark mx-2">商品一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to public_cart_items_path do %>
            <button class="btn btn-outline-dark mx-2">カート</button>
          </li>
            <% end %>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete do %>
            <button class="btn btn-outline-dark mx-2">ログアウト</button>
          </li>
            <% end %>
       <% else %>
          <li>
            <%= link_to public_homes_about_path do %>
            <button class="btn btn-outline-dark mx-2">About</button>
          </li>
            <% end %>
          <li>
            <%= link_to public_items_path do %>
            <button class="btn btn-outline-dark mx-2">商品一覧</button>
          </li>
            <% end %>
          <li>
            <%= link_to new_customer_registration_path do %>
            <button class="btn btn-outline-dark mx-2">新規登録</button>
          </li>
            <% end %>
          <li>
            <%= link_to new_customer_session_path do %>
            <button class="btn btn-outline-dark mx-2">ログイン</button>
          </li>
            <% end %>
       <% end %>
      <% end %>
       </ul>
      </div>
      </nav>
    </header>
    <%= yield %>
  </body>

  <footer class="footer mt-auto py-3 bg-light">
    <!--<div class="container">
    </div>-->
  </footer>
  </div>
</html>
