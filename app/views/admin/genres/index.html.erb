<h1>ジャンル一覧・追加</h1>
  <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
<h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>

  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-5">
<table class="table">
  <thead>
    <th>ジャンル</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

