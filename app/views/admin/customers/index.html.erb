<h2>会員一覧</h2>
<table class="table table-striped">
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to  admin_customer_path(c.id) do %>
      <%= c.last_name %><%= c.first_name %>
      <% end %></td>
      <td><%= c.email %></td>
      <td><% if c.is_deleted == false %>
      有効
      <% else %>
      退会
    <% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>